<Window x:Class="MyDiary.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDiary.UI"
        xmlns:controls="clr-namespace:MyDiary.UI.Controls"
        mc:Ignorable="d"
        Title="MyDiary" Height="800" Width="1200"
        Background="{StaticResource Brush.Background}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <controls:TopBarControl x:Name="TopBar" Grid.Row="0" Visibility="Collapsed" />

        <Border Grid.Row="1" Background="{StaticResource Brush.Background}">
            <ContentControl x:Name="MainContent" />
        </Border>
    </Grid>
</Window>
